<%# locals: { current_step:, wizard:, potential: false } -%>

<h2 class="govuk-heading-m">
  <%= t(".education_phase") %>
</h2>

<%= render "shared/wizards/hosting_interest/check_your_answers/education_phase_list",
 current_step: %>

<% if current_step.year_groups.present? %>
  <h2 class="govuk-heading-m">
    <%= potential ? t(".primary") : t(".primary_placements") %>
  </h2>

  <%= render "shared/wizards/hosting_interest/check_your_answers/primary_placements_list",
    wizard:, current_step: %>
<% end %>

<% if current_step.selected_secondary_subjects.present? %>
  <h2 class="govuk-heading-m">
    <%= potential ? t(".secondary") : t(".secondary_placements") %>
  </h2>

  <%= render "shared/wizards/hosting_interest/check_your_answers/secondary_placements_list",
    wizard:, current_step: %>
<% end %>

<% if current_step.key_stages.present? %>
  <h2 class="govuk-heading-m">
    <%= potential ? t(".send") : t(".send_placements") %>
  </h2>

  <%= render "shared/wizards/hosting_interest/check_your_answers/send_placements_list",
    wizard:, current_step: %>
<% end %>
