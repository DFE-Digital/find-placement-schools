<% content_for :page_title, title_with_error_prefix(
  t(".title"),
  error: current_step.errors.any?,
) %>

<%= form_for(current_step, url: current_step_path, method: :put) do |f| %>
  <%= f.govuk_error_summary %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">
        <%= t(".caption", academic_year_name: wizard.academic_year.short_name) %>
      </span>

      <%= f.govuk_text_area :note,
          label: { size: "l", text: t(".title"), tag: "h1" },
          hint: { text: t(".hint") } %>

      <%= f.govuk_submit t(".continue") %>
    </div>
  </div>
<% end %>
