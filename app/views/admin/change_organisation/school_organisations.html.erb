<%= content_for :page_title, t(".title") %>
<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= content_for(:before_content) do %>
        <%= govuk_back_link(href: admin_dashboard_index_path) %>
      <% end %>

      <h1 class="govuk-heading-l"><%= t(".title") %></h1>

      <%= render partial: "search", locals: {
        url: school_organisations_admin_change_organisation_index_path,
        label: { text: t(".search_for_school"), size: "m" },
        name: :name,
        clear_search_url: school_organisations_admin_change_organisation_index_path(filters: filter_params),
        filters: filter_params,
      } %>

      <% if schools.any? %>
        <%= govuk_summary_list do |summary_list| %>
          <% schools.each do |school| %>
            <% summary_list.with_row do |row| %>
              <% row.with_key(text: school.name) %>
              <% row.with_action(text: t(".continue"),
                                 href: update_organisation_admin_change_organisation_index_path(organisation_id: school.id),
                                 visually_hidden_text: school.name,
                                 classes: ["govuk-link--no-visited-state"]) %>
            <% end %>
          <% end %>
        <% end %>

        <%= render PaginationComponent.new(pagy:) %>
      <% else %>
        <p class="govuk-body"><%= t(".no_schools_found") %></p>
      <% end %>
    </div>
  </div>
</div>
