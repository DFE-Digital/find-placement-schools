<%= content_for :page_title, t(".heading", user_name: @user.full_name) %>

<%= content_for(:before_content) do %>
  <%= govuk_back_link(href: users_path(current_organisation)) %>
<% end %>

<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l"><%= t(".caption") %></span>
      <h1 class="govuk-heading-l"><%= t(".heading", user_name: @user.full_name) %></h1>

      <%= govuk_warning_text(text: t(".warning", user_name: @user.full_name, school_name: current_organisation.name)) %>

      <%= govuk_button_to t(".remove_user"), user_path(@user), warning: true, method: :delete %>

      <p class="govuk-body">
        <%= govuk_link_to(t(".cancel"), user_path(@user), no_visited_state: true) %>
      </p>
    </div>
  </div>
</div>
